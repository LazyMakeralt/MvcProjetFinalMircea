@model MvcProjetFinalMircea.Models.Article

<h1>Créer un article</h1>

<form asp-action="Create" method="post">

    <div class="mb-3">
        <label asp-for="Titre" class="form-label"></label>
        <input asp-for="Titre" class="form-control" />
        <span asp-validation-for="Titre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Contenu" class="form-label"></label>
        <textarea asp-for="Contenu" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Contenu" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AuteurId" class="form-label">Auteur</label>
        <select asp-for="AuteurId" class="form-control" asp-items="@(ViewData["AuteurId"] as SelectList)">
            <option value="">-- Sélectionnez un auteur --</option>
        </select>
        <span asp-validation-for="AuteurId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Créer</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Retour</a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
