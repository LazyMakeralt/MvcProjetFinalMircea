@model IEnumerable<MvcProjetFinalMircea.Models.Article>

<h1>Articles</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Créer un article</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Auteur</th>
            <th>Créé le</th>
            <th>Likes ❤️</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Titre</td>
                <td>@item.Auteur?.UserName</td>
                <td>@item.DateCreation.ToShortDateString()</td>
                <td><span class="badge bg-danger">@item.Likes.Count</span></td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Détails</a>
                </td>
            </tr>
        }
    </tbody>
</table>
